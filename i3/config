# Set colors from Xresources
# Change 'color7' and 'color2' to whatever colors you want i3 to use 
# from the generated scheme.
# NOTE: The '#f0f0f0' in the lines below is the color i3 will use if
# it fails to get colors from Xresources.
set_from_resource $fg  i3wm.color5 #f0f0f0
set_from_resource $bg  i3wm.color8 #f0f0f0
set_from_resource $bgu i3wm.color0

#Rounded borders
border_radius 20

# class                 border  backgr. text indicator child_border
client.focused          $bg     $bg     $fg  $bg       $bg
client.focused_inactive $bg     $bg     $fg  $bg       $bgu
client.unfocused        $bg     $bg     $fg  $bg       $bgu
client.urgent           $bg     $bg     $fg  $bg       $bg
client.placeholder      $bg     $bg     $fg  $bg       $bg

client.background       $bg
focus_follows_mouse no

exec --no-startup-id synclient TapButton3=2
exec --no-startup-id setxkbmap -model abnt2 -layout br -variant abnt2
exec --no-startup-id xinput set-prop 'FTE1200:00 0B05:0501 Touchpad'  'Synaptics Scrolling Distance'  -40 -40
exec_always --no-startup-id xinput set-prop 17 "Evdev Scrolling Distance" 1 1 1
exec_always --no-startup-id xinput set-prop 16 "Evdev Scrolling Distance" 1 1 1

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q sset Master 1%+ #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q sset Master 1%- #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle # mute sound

# Screen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id bash /home/decker/scripts/inc_bl.sh 
bindsym XF86MonBrightnessDown exec --no-startup-id  bash /home/decker/scripts/dec_bl.sh

#Lock screen
exec --no-startup-id xscreensaver -no-splash 
bindsym $mod+Control+L exec xscreensaver-command -lock

set $mod Mod1
set $sup Mod4
